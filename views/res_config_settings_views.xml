<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_terminals_section']" position="inside">
                <setting id="dinger_payment_terminal_setting"
                         title="The transactions are processed by Dinger. Set your Dinger credentials on the related payment method."
                         string="Dinger" help="Accept payments with a Dinger payment terminal"
                         documentation="applications/sales/point_of_sale/payment_methods/terminals/dinger.html">
                    <field name="dinger_payment_terminal"/>
                </setting>
            </xpath>
            <xpath expr="//block[@id='pos_accounting_section']/setting[@id='order_edit_tracking']" position="after">
                <setting groups="account.group_account_readonly">
                    <label string="Default Difference Temporary Account" for="account_default_pos_receivable_difference_account_id"/>
                    <i class="fa fa-info-circle me-1" title="This setting is common to all PoS."
                       pos-data-toggle="tooltip"/>
                    <div class="text-muted">
                        Intermediary account used for Tax difference.
                    </div>
                    <field name="account_default_pos_receivable_difference_account_id" colspan="4" nolabel="1"
                           domain="[('reconcile', '=', True), ('account_type', '=', 'asset_receivable')]"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>